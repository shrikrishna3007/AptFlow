# This is a sample .env.example file for setting environment-specific variables.
# Copy this file to `.env` and fill in the actual values before running the application.

#------------------------------------------------------------------------------------------

# Application Configuration
APP_NAME = your_app_name
APP_PORT = your_app_port_number
CONTEXT_PATH = your_context_path    # Replace with your actual context path e.g., /api
#------------------------------------------------------------------------------------------

# Database Configuration - MySQL
DB_URL = jdbc:mysql://your_db_host:3306/your_database_name
DB_USERNAME = your_db_username
DB_PASSWORD = your_db_password
DB_DRIVER = com.mysql.cj.jdbc.Driver
DDL_AUTO = update
SHOW_SQL = true
#------------------------------------------------------------------------------------------

# Database Configuration - MongoDB
MONGO_URL = mongodb://localhost:27017
MONGO_DATABASE = your_db_name
#------------------------------------------------------------------------------------------

# JWT Configuration (Security Configuration)
JWT_SECRET_KEY = your_jwt_secret_key
USER_ACCESS_TOKEN_EXPIRATION = set_user_access_token_expiration     #  In milliseconds. e.g., 900000 = 15 minutes
ADMIN_ACCESS_TOKEN_EXPIRATION = set_admin_access_token_expiration   #  In milliseconds. e.g., 3600000 = 1 hour
REFRESH_TOKEN_EXPIRATION = set_refresh_token_expiration             #  In milliseconds. e.g., 604800000 = 7 days
#------------------------------------------------------------------------------------------

# CORS Configuration
CORS_ALLOWED_ORIGINS = http://localhost:3000    # Use comma-separated list for multiple
CORS_ALLOWED_METHODS = GET, POST, PUT, DELETE
CORS_ALLOWED_HEADERS = Content-Type,Authorization
#------------------------------------------------------------------------------------------

# Email Configuration
EMAIL_HOST = smtp.gmail.com
EMAIL_PORT = 587
EMAIL_USERNAME = your_email@example.com
EMAIL_PASSWORD = your_email_password
EMAIL_SMTP_AUTH = true
EMAIL_SMTP_STARTTLS_ENABLE = true
#------------------------------------------------------------------------------------------

# API Documentation Configuration
API_DOCS_PATH=/your-api-docs-path
API_DOCS_TITLE=Your API Documentation Title
SWAGGER_UI_PATH=/your-swagger-ui-path
SWAGGER_UI_TITLE=Your Swagger UI Title
#------------------------------------------------------------------------------------------

# Actuator Configuration
ACTUATOR_WEB_EXPOSURE_INCLUDE=health,metrics,info  # Or use * if exposing all
ACTUATOR_METRICS_ENABLED=true
ACTUATOR_HEALTH_SHOW_DETAILS=never  # Options: never, when_authorized, always
#------------------------------------------------------------------------------------------

# Logging Configuration
LOGGING_LEVEL_ROOT = INFO
LOGGING_LEVEL_COM_YOUR_APP = DEBUG  # Replace with actual package name.
#------------------------------------------------------------------------------------------

# Forgot Password Configuration
RESET_PASSWORD_URL = https://your-frontend-domain.com/reset-password  # Replace with your actual frontend reset password URL
#------------------------------------------------------------------------------------------

# Razorpay Configuration
RAZORPAY_KEY_ID = your_razorpay_key_id
RAZORPAY_KEY_SECRET = your_razorpay_key_secret

#Razorpay Webhook Configuration
RAZORPAY_WEBHOOK_SECRET = your_razorpay_webhook_secret        # Replace with Actual Razorpay webhook secret. Currently dummy code is given.
#------------------------------------------------------------------------------------------

# Redis Configuration
REDIS_HOST = your_redis_host
REDIS_PORT = your_redis_port
#------------------------------------------------------------------------------------------